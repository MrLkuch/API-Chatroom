<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Accueil</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="min-h-screen bg-gray-100 flex flex-col">

<!-- Navbar -->
<nav class="bg-white shadow-lg sticky top-0 z-20">
    <div class="max-w-7xl mx-auto px-2 sm:px-6 lg:px-8">
        <div class="relative flex items-center justify-between h-16">
            <div class="absolute inset-y-0 left-0 flex items-center sm:hidden">
                <!-- Mobile menu button -->
            </div>
            <div class="flex-1 flex items-center justify-center sm:items-stretch sm:justify-start">
                <div class="flex-shrink-0 text-primary text-xl font-bold">ChatApp</div>
            </div>
            <div class="flex items-center">
                <!-- Menu déroulant conditionnel -->
                <div id="auth-dropdown" class="relative">
                    <!-- Exemple avec Twig (si vous utilisez Symfony) -->
                    {% if app.user %}
                        <!-- Si l'utilisateur est connecté, afficher le bouton de déconnexion -->
                        <button class="bg-red-500 text-white px-4 py-2 rounded" onclick="logout()">Déconnexion</button>
                    {% else %}
                        <!-- Si l'utilisateur n'est pas connecté, afficher le menu déroulant -->
                        <button class="bg-blue-500 text-white px-4 py-2 rounded" onclick="toggleDropdown()">Connexion/Inscription</button>
                        <!-- Menu déroulant -->
                        <div id="dropdown-menu" class="absolute right-0 mt-2 w-48 bg-white shadow-lg rounded-lg hidden">
                            <ul class="py-2">
                                <li><a href="/register" class="block px-4 py-2 text-gray-700 hover:bg-gray-200">Inscription</a></li>
                                <li><a href="/login" class="block px-4 py-2 text-gray-700 hover:bg-gray-200">Connexion</a></li>
                            </ul>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</nav>

<script>
    // Fonction pour afficher/masquer le menu déroulant
    function toggleDropdown() {
        const dropdown = document.getElementById("dropdown-menu");
        dropdown.classList.toggle("hidden");
    }

    // Fonction de déconnexion
    function logout() {
        fetch('/logout', { method: 'POST' })
            .then(response => {
                if (response.ok) {
                    window.location.href = '/';  // Rediriger vers la page d'accueil après déconnexion
                }
            });
    }
</script>


    <!-- Main content -->
    <main class="flex-grow flex items-center justify-center bg-gray-100 py-12">
        <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-md">
            <h1 class="text-2xl font-semibold text-center text-primary mb-6">Bienvenue sur Ultramar</h1>
            
            <div id="user-welcome" class="text-center text-gray-600 mb-6 hidden">
                <p id="user-info"></p>
                <div class="space-y-4">
                    <a href="/chatrooms" class="block w-full bg-primary text-white py-3 rounded-lg text-center">Mes Chatrooms</a>
                </div>
            </div>
            
            <div id="guest-welcome" class="text-center text-gray-600 mb-6">
                <p>Connectez-vous pour accéder à vos chatrooms.</p>
                <a href="/login" class="block w-full bg-primary text-white py-3 rounded-lg text-center">Se connecter</a>
            </div>
        </div>
    </main>

    <script>
        window.onload = function() {
            const token = localStorage.getItem('jwt');
            const userWelcome = document.getElementById('user-welcome');
            const guestWelcome = document.getElementById('guest-welcome');

            if (token) {
                // Decode JWT token to get user info (simplified)
                const decodedToken = JSON.parse(atob(token.split('.')[1]));
                const userName = decodedToken.username; // Assuming the username is in the token payload

                document.getElementById('user-info').innerText = `Bienvenue, ${userName}!`;
                userWelcome.classList.remove('hidden');
                guestWelcome.classList.add('hidden');
            } else {
                userWelcome.classList.add('hidden');
                guestWelcome.classList.remove('hidden');
            }
        };
    </script>

</body>
</html>